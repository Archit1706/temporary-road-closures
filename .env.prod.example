# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# Backend Configuration
SECRET_KEY=your_very_long_secret_key_at_least_256_bits_here
ALLOWED_ORIGINS=["https://closures.osm.ch", "http://closures.osm.ch", "https://api.closures.osm.ch", "http://api.closures.osm.ch"]
ALLOWED_HOSTS=["api.closures.osm.ch", "closures.osm.ch", "localhost", "127.0.0.1"]

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.closures.osm.ch

# OpenLR Configuration
OPENLR_ENABLED=true
OPENLR_FORMAT=base64
OPENLR_ACCURACY_TOLERANCE=50.0

# Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_V1_STR=/api/v1

# Database URLs (computed from DB_PASSWORD)
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@db:5432/osm_closures_prod

# Redis
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO

# OAuth (optional - can be disabled for now)
OAUTH_ENABLED=false
FRONTEND_URL=http://localhost:3000